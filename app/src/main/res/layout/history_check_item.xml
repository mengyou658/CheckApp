<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/check_history_plan_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/check_plan_date"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/check_history_plan_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/check_history_plan_date_label"
        android:hint="unknown"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/check_history_real_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/check_history_plan_date_label"
        app:layout_constraintLeft_toLeftOf="@id/check_history_plan_date_label"
        android:text="@string/check_real_data"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/check_history_real_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/check_history_real_date_label"
        app:layout_constraintLeft_toLeftOf="@id/check_history_plan_date_text"
        android:hint="unknown"

        />

    <TextView
        android:id="@+id/check_history_judge_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/check_history_plan_date_label"
        app:layout_constraintBottom_toBottomOf="@id/check_history_real_date_label"
        android:hint="unknown"
        />
</android.support.constraint.ConstraintLayout>